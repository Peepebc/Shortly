// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("SHORTLY_PRISMA_URL") // uses connection pooling
  directUrl = env("SHORTLY_URL_NON_POOLING") // uses a direct connection
}

model Link {
  id        String     @default(cuid()) @id
  name     String
  longLink     String
  shortedLink     String
  description   String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  String?
}

model User {
  id            String       @default(cuid()) @id
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  links         Link[]
  @@map(name: "users")
}